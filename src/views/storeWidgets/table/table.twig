<style>
    .window__table {
        background-color: #495057;
    }
</style>

<div class="table-responsive">
  <table class="table table-striped table-bordered small font-weight-bold bg-white">
    <thead>
      <tr class="window__table text-white">
        <th class="text-center">Largeur</th>
        {% for width in object['columns'] %}
        <th class="text-center align-middle" rowspan="2">{{ width }}</th>
        {% endfor %}
      </tr>
      <tr>
        <th class="text-center">Hauteur</th>
      </tr>
    </thead>
    <tbody>
      {% for height,row in object['items'] %}
      <tr>
        <td class="text-center">
          {{ height }}
        </td>
        {% for width in object['columns'] %}
        <td class="text-center">
          {% if object['items'][height][width]['price'] is defined and object['items'][height][width]['price'] != 0 %}
          <a target="_blank" href="https://www.lapeyre.fr/{{ object['items'][height][width]['url']|replace({' ':'%20'}) }}" class="text-secondary">
            {{ object['items'][height][width]['price'] }} â‚¬
          </a>
          {% else %}
          
          {% endif %}
        </td>
        {% endfor %}
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>