    $('<div class="col-6 col-md-4 col-lg-4 px-1 py-3 px-sm-3"><img src="https://res.cloudinary.com/dwkgy95ov/image/upload/v1528464357/promoStair_1.jpg" class="img-fluid" /></div>').insertAfter('div[id^="thumb_carouselProduct"]:nth-of-type(5)');
