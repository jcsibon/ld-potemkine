<div class="{% if thumbProductSize == 2 %}col-12 col-lg-6{% else %}col-6 col-md-4 col-lg-3{% endif %} px-1 py-3 px-sm-3">
    <a href="#">
        <div class="border bg-white thumb_product">
            <div id="carouselProduct{{ thumbProductIndex }}" class="position-relative carousel slide m-auto overflow-hidden" >
                {% if thumbProductCarousel == 1 %}
                <ol class="carousel-indicators d-lg-none mb-1">
                    <li data-target="#carouselProduct{{ thumbProductIndex }}" data-slide-to="0" class="mx-2 active"></li>
                    <li data-target="#carouselProduct{{ thumbProductIndex }}" data-slide-to="1" class="mx-2"></li>
                    <li data-target="#carouselProduct{{ thumbProductIndex }}" data-slide-to="2" class="mx-2"></li>
                </ol>
                {% endif %}
                <div class="carousel-inner overflow-visible" role="listbox">
                    <div class="carousel-item active bg-cover {% if thumbProductSize == 1 %} thumb_product__high {% elseif thumbProductSize == 2 %} thumb_product__large{% endif %}" style="background-image: url({{thumbProductImage}}); ">
                    </div>
                    <div class="carousel-item bg-cover {% if thumbProductSize == 1 %} thumb_product__high {% elseif thumbProductSize == 2 %} thumb_product__large{% endif %}" style="background-image: url({{thumbProductImage2}}); ">
                    </div>
                    <div class="carousel-item bg-cover {% if thumbProductSize == 1 %} thumb_product__high {% elseif thumbProductSize == 2 %} thumb_product__large{% endif %}" style="background-image: url({{thumbProductImage3}}); ">
                    </div>
                </div> 
                {% if thumbProductCarousel == 1 %}
                <a class="carousel-control-prev left-0" href="#carouselProduct{{ thumbProductIndex }}" role="button" data-slide="prev">
                    <div class="bg-primary d-flex">
                        <svg width="20" height="20" class="m-auto"><use xlink:href="#arrow-point-to-left"/></svg>
                        <span class="sr-only">Previous</span>
                    </div>
                </a>
                <a class="carousel-control-next" href="#carouselProduct{{ thumbProductIndex }}" role="button" data-slide="next">
                    <div class="bg-primary d-flex">
                        <svg width="20" height="20" class="m-auto"><use xlink:href="#arrow-point-to-right"/></svg>
                        <span class="sr-only">Next</span>
                    </div>
                </a>
                {% endif %}

                <div class="position-absolute d-flex top-0 right-0">
                    <div class="d-none bg-dark thumb_product__fav w-70 h-70">
                        <span class="m-auto text-white small">
                            <svg width="25" height="25" class="m-auto"><use xlink:href="#heart-o-white"/></svg>
                        </span>
                    </div>
                    {% if thumbProductPrice != thumbProductCataPrice %}
                    <div class="d-flex bg-secondary w-70 h-70 thumb_product__promo">
                        <span class="m-auto text-white small">Promo</span>
                    </div>
                    {% endif %}
                </div>
                {% if thumbProductMore|length > 0 %}
                <div class="thumb_product__more position-absolute bg-white d-none d-lg-block bottom-0">
                    <p class="p-2 text-center small">
                        {{thumbProductMore|raw}}
                    </p>
                </div>
                {% endif %}
            </div>  

            <div class="text-center px-1 d-flex thumb_product__bottomBloc h-85">
                <div class="m-auto">
                    <p class="small pt-2 mb-1 text-dark thumb_product__subTitle">{{thumbProductSubTitle}}</p>
                    <p class="h6 text-dark thumb_product__title">{{thumbProductTitle}}</p>
                </div>
            </div>
            <div class="{% if thumbProductSurMesure == 1 %}bg-secondary{% else %} bg-primary  {% endif %} d-flex thumb_product__bloc_price">
                <div class="m-auto text-center text-white">
                    {% if thumbProductSurMesure == 1 %}
                    <div class="font-weight-bold">Découvrir</div>
                    {% else %}
                    <p class="small mb-0">{% if thumbProductAPartir == 1 %}à partir de{% endif %} {% if thumbProductPrice != thumbProductCataPrice %}<del>{{thumbProductCataPrice}} €</del>{% endif %}</p>
                    <p class="h5 thumb_product__price font-weight-bold mb-0">{{thumbProductPrice}} € {% if data.session.pro is defined and data.session.pro == 1 %}<sup><small>HT</small></sup>{% endif %}{% if thumbProductColisage == 1 %} <small>le m²</small>{% endif %}</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </a>
</div>
