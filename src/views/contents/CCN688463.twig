  .on("mouseenter", function() {
   if ($(this).text().trim().length=='0') {
     $(this).addClass('td_sm');
   }
  })
  .on("mouseleave", function() {
    $('.criteria table td').removeClass('td_sm');
  });

$(".criteria ul li" )
  .on("mouseenter", function() {
     $(this).addClass('criteria_li_hover');
     $(this).find('div').addClass('criteria_li_div_hover');
  })
  .on("mouseleave", function() {
    $(".criteria ul li").removeClass('criteria_li_hover');
