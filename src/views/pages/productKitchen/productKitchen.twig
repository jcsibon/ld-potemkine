            <div class="col-12 col-lg-8 col-xl-6 pt-5">
                <p class="text-uppercase display-3 kitchen__title text-right">{{ categories[global.request.get('code')]['title'] }}</p>
                <div class="bg-white p-5">
                    <p class="px-0 px-lg-5">{{ categories[global.request.get('code')]['longDescription'] }}</p>
