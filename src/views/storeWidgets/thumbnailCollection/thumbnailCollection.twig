<a href="/{% if categories[object]['url']is defined %}{{ categories[object]['url']|replace({' ':'%20'}) }}{% else %}#{% endif %}">
    <div class="thumb_collection thumb_product">
        <div id="carouselProduct{{loopIndex}}" class="position-relative carousel slide m-auto overflow-hidden">
            {#
            <ol class="carousel-indicators d-lg-none mb-1">
                <li data-target="#carouselProduct{{loopIndex}}" data-slide-to="0" class="mx-2 active"></li>
                <li data-target="#carouselProduct{{loopIndex}}" data-slide-to="1" class="mx-2"></li>
                <li data-target="#carouselProduct{{loopIndex}}" data-slide-to="2" class="mx-2"></li>
            </ol>
            #}         
            <div class="carousel-inner overflow-visible" role="listbox">
                <div class="carousel-item active bg-cover thumb_product__square" style="background-image: url({% if categories[object]['imageFull']['content'] is defined %}{{ categories[object]['imageFull']['content']|replace({' ':'%20'}) }}{% endif %}); ">
                </div>
                <div class="carousel-item bg-cover thumb_product__square" style="background-image: url({% if categories[object]['imageFull']['content'] is defined %}{{ categories[object]['imageFull']['content']|replace({' ':'%20'}) }}{% endif %}); ">
                </div>
                <div class="carousel-item bg-cover thumb_product__square" style="background-image: url({% if categories[object]['imageFull']['content'] is defined %}{{ categories[object]['imageFull']['content']|replace({' ':'%20'}) }}{% endif %}); ">
                </div>
            </div> 
            <a class="carousel-control-prev left-0" href="#carouselProduct{{loopIndex}}" role="button" data-slide="prev">
                <div class="bg-primary d-flex">
                    <svg width="20" height="20" class="m-auto"><use xlink:href="#arrow-point-to-left"/></svg>
                    <span class="sr-only">Previous</span>
                </div>
            </a>
            <a class="carousel-control-next" href="#carouselProduct{{loopIndex}}" role="button" data-slide="next">
                <div class="bg-primary d-flex">
                    <svg width="20" height="20" class="m-auto"><use xlink:href="#arrow-point-to-right"/></svg>
                    <span class="sr-only">Next</span>
                </div>
            </a>
            <div class="col-12 position-absolute bottom-0">
                <div class="row d-flex">
                    <div class="col-7 col-lg-8 px-3 py-1" >
                        <div class="text-left">
                            {% if categories[object]['shortDesc']['content'] is defined %}
                            <p class="small pt-2 mb-1 text-light line-height-normal">{{ categories[object]['shortDesc']['content'] }}</p>
                            {% endif %}
                            <p class="h5 font-weight-bold text-light">{{ categories[object]['label']['content'] }}</p>
                        </div>
                    </div>
                    <div class="col-5 col-lg-4 pl-0 py-1 text-white mt-auto text-right thumb_collection_price">
                        <p class="small mb-0">
                            à partir de
                        </p>
                        <p class="kitchen__price mb-1">
                            {{ categories[object]['price'] }}€
                        </p>
                    </div>
                    <div class="position-absolute thumb_collection_btn">
                        <button class="btn btn-primary px-3 py-2 cursor-pointer">Découvrir</button>
                    </div>
                </div>
            </div>
            <div class="position-absolute d-flex top-0 right-0">
                <div class="d-none bg-dark thumb_product__fav w-70 h-70">
                    <span class="m-auto text-white small">
                        <svg width="25" height="25" class="m-auto"><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#heart-o-white"></use></svg>
                    </span>
                </div>
            </div>
        </div>
    </div>
</a>