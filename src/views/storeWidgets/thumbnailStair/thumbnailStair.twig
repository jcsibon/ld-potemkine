<a href="/{{ categories[object]['seo']['urlKeyword']['content'] }}">
    <div class="border bg-white thumb_product">
        <div id="carouselProduct{{loopIndex}}" class="position-relative carousel slide m-auto overflow-hidden">
            <ol class="carousel-indicators d-lg-none mb-1">
                <li data-target="#carouselProduct{{loopIndex}}" data-slide-to="0" class="mx-2 active"></li>
                <li data-target="#carouselProduct{{loopIndex}}" data-slide-to="1" class="mx-2"></li>
                <li data-target="#carouselProduct{{loopIndex}}" data-slide-to="2" class="mx-2"></li>
            </ol>
            <div class="carousel-inner overflow-visible" role="listbox">
                <div class="carousel-item bg-cover thumb_product__high active" style="background-image: url({{ categories[object]['imageFull']['content']|replace({' ':'%20'}) }}); ">
                </div>
                <div class="carousel-item bg-cover thumb_product__high" style="background-image: url({{ categories[object]['imageFull']['content']|replace({' ':'%20'}) }}); ">
                </div>
                <div class="carousel-item bg-cover thumb_product__high" style="background-image: url({{ categories[object]['imageFull']['content']|replace({' ':'%20'}) }}); ">
                </div>
            </div> 
            <a class="carousel-control-prev left-0" href="#carouselProduct{{loopIndex}}" role="button" data-slide="prev">
                <div class="bg-primary d-flex">
                    <svg width="20" height="20" class="m-auto"><use xlink:href="#arrow-point-to-left"></use></svg>
                    <span class="sr-only">Previous</span>
                </div>
            </a>
            <a class="carousel-control-next" href="#carouselProduct{{loopIndex}}" role="button" data-slide="next">
                <div class="bg-primary d-flex">
                    <svg width="20" height="20" class="m-auto"><use xlink:href="#arrow-point-to-right"></use></svg>
                    <span class="sr-only">Next</span>
                </div>
            </a>

            <div class="position-absolute d-flex top-0 right-0">
                {% if data.session.promo is defined and data.session.promo == 1 %}
                <div class="d-flex bg-secondary w-70 h-70 thumb_product__promo">
                    <span class="m-auto text-white small">Promo</span>
                </div>
                {% endif %}
            </div>
            <div class="thumb_product__more position-absolute bg-white d-none d-lg-block bottom-0">
                <p class="p-2 text-center small">
                    <img src="https://res.cloudinary.com/dwkgy95ov/image/upload/v1518736707/pictos.png">
                </p>
            </div>
        </div>  

        <div class="text-center px-1 d-flex thumb_product__bottomBloc h-85">
            <div class="m-auto">
                <p class="small pt-2 mb-1 text-dark thumb_product__subTitle">Lorem ipsum dolor sit amet</p>
                <p class="h5 font-weight-bold text-dark thumb_product__title">{{ categories[object]['label']['content'] }}</p>
            </div>
        </div>

        {% if categories[object]['type']=='SUR_MESURE' %}
        <div class="bg-primary text-white d-flex thumb_product__bloc_price">
            <div class="m-auto text-center">
                <p class="h6 font-weight-normal mb-0">Découvrir</p>
            </div>
        </div>
        {% else %}
        <div class="bg-light d-flex thumb_product__bloc_price">
            <div class="m-auto text-center">
                {% if data.session.promo is defined and data.session.promo == 1 %}
                <p class="small mb-0">à partir de <del>1490,00 €</del></p>{% endif %}
                <p class="h5 thumb_product__price font-weight-bold mb-0">1250,00 € </p>
            </div>
        </div>
        {% endif %}
    </div>

</a>
