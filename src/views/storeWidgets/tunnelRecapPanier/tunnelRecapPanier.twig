<!-- BEGIN tunnelRecapPanier -->
<div class="card bg-light mb-4">
    <div class="card-body">
        <h3>Panier <small class="text-muted">({{ data.session.cart.articles|length }} produits)</small></h2>
        <ul class="list-group">            
            {% for article in data.session.cart.articles %}
            <li class="list-group-item">
                <div class="row">
                    <div class="col-3">
                        <img class="img-fluid" src="/images/product_thumb.png" alt="">
                    </div>
                    <div class="col-9">
                            <p class="small text-muted">Ref.123456</p>
                            <p><strong>Bloc-Porte palier coupe feu ch&ecirc;ne &agrave; vernir</strong></p>
                            <p class="small mt10 text-orange"><i class="fa fa-circle" aria-hidden="true"></i> Disponible</p>
                        <div class="row">
                            <div class="col-6">
                                <p>Quantité: 1</p>
                            </div>
                            <div class=" col-6">
                                89,00 €
                            </div>
                        </div>
                    </div>
                </div>
            </li>
            {% endfor %}
        </ul>
        {% if data.session.cart|length > 10 %}
        <div class="text-center">
        	<button class="btn btn-primary btn-large mt20 mb20">Voir tout mon panier</button>
        </div>
        {% endif %}
        <hr>
        {% if data.session.cart.deliveryfees is defined and data.session.cart.delivery == 1 %}
        <div class="row">
            <div class="col-7">
                 <p class="pl-3">Sous total</p>
             </div>
             <div class="col-5">
                 <p class="pr-3 pull-right"><strong>221,00 €</strong></p>
             </div>
        </div>
         <div class="row">
            <div class="col-7">
                <p class="pl-3 my-1">Frais de livraison</p>
            </div>
            <div class="col-5">
                <p class="pr-3 my-1 pull-right"><strong>{{ data.session.cart.deliveryfees|number_format(2, '.', ',') }} €</strong></p>
            </div>
        </div>
        <hr>
        {% endif %}
        <div class="row">
            <div class="col-7">
                <p class="pl-3 my-1">Total TTC</p>
            </div>
            <div class="col-5">
                <p class="pr-3 my-1 pull-right"><strong>221,00 €</strong></p>
            </div>
        </div>
        <br>
    </div>
</div>
<!-- END tunnelRecapPanier -->