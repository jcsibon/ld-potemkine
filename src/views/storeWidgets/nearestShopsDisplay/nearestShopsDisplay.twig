<!-- BEGIN nearestShopsDisplay -->
<div class="card my-3 {% if active == 1 %}is-active{% endif %} align-items-stretch">
  <div class="card-body">
      <p><strong>{{ shop.titre }}<a data-toggle="modal" data-target="#shop{{ loop.index0 }}">&nbsp;<i class="fa fa-question-circle-o"></i></a></strong></p>

  <div class="border-left">
      <p><small>{{ shop.adresse.numVoie }}
      {% if shop.adresse.compl1|length > 0 %}<br>{{ shop.adresse.compl1 }}{% endif %}
      {% if shop.adresse.compl2|length > 0 %}<br>{{ shop.adresse.compl2 }}{% endif %}
      {% if shop.adresse.compl3|length > 0 %}<br>{{ shop.adresse.compl3 }}{% endif %}
      <br>{{ shop.adresse.codePostal }}&nbsp;{{ shop.adresse.ville }}</small></p>
      </div>
      {% if active == 1 %}
      <p class="small text-success"><i class="fa fa-circle" aria-hidden="true"></i>&nbsp;Disponible aujourd'hui</p>
      {% else %}
      <p class="small text-warning"><i class="fa fa-circle" aria-hidden="true"></i>&nbsp;Disponible le 14/04/17</p>
      {% endif %}
      {% if active == 1 %}
          <button class="btn btn-default disabled">Sélectionné</button>
      {% else %}
          <button class="btn btn-primary">Choisir</button>
      {% endif %}
      <a href="#" data-toggle="modal" data-target="#shop{{ loop.index0 }}"></a>
      <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              ...
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<!-- END nearestShopsDisplay -->