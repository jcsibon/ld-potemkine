<div class="row">
    <div class="col-12 col-xl-10 offset-xl-1 py-4 mb-3 carouselCrossSell">
        <div class="row">
            <div id="carouselCrossSell" class="carousel carousel-showmanymoveone slide"  data-ride="carousel" data-interval="false">
                <div class="carousel-inner row m-0">                        
                    {% for i in 0..3 %}
                    <div class="carousel-item {% if loop.first %}active{% endif %}">
                        <div class="row m-0">
                            <div class="col-6 col-md-4 col-lg-3 px-1 py-3 px-sm-3">
                                {% include 'storeWidgets/thumbnailProduct/thumbnailProduct.twig' %}
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
            <div id="slider-control" class="position-absolute slider-control">
                <a class="carousel-control-prev" href="#carouselCrossSell" role="button" data-slide="prev">
                    <div class="bg-primary d-flex">
                        <svg width="30" height="30" class="m-auto"><use xlink:href="#arrow-point-to-left"/></svg>
                        <span class="sr-only">Previous</span>
                    </div>
                </a>
                <a class="carousel-control-next" href="#carouselCrossSell" role="button" data-slide="next">
                    <div class="bg-primary d-flex">
                        <svg width="30" height="30" class="m-auto"><use xlink:href="#arrow-point-to-right"/></svg>
                        <span class="sr-only">Next</span>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>