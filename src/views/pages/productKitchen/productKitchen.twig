{% extends"layouts/default.html" %}
{% block content %}

<div class="position-relative ">

    <div id="carouselFPCKitchen" class="carousel slide m-auto worktop__container d-none d-lg-block" >
        <div class="carousel-inner h-600" role="listbox">
            <div style="background-image: url({% if categories[global.request.get('code')]['imageFull']['content'][0] is defined %}{{ categories[global.request.get('code')]['imageFull']['content'][0]|replace({' ':'%20'}) }}{% endif %})" class="carousel-item active bg-cover h-600"></div>
            <div style="background-image: url({% if categories[global.request.get('code')]['imageFull']['content'][0] is defined %}{{ categories[global.request.get('code')]['imageFull']['content'][0]|replace({' ':'%20'}) }}{% endif %})" class="carousel-item bg-cover h-600"></div>
            <div style="background-image: url({% if categories[global.request.get('code')]['imageFull']['content'][0] is defined %}{{ categories[global.request.get('code')]['imageFull']['content'][0]|replace({' ':'%20'}) }}{% endif %})" class="carousel-item bg-cover h-600"></div>
        </div>
        {% if categories[global.request.get('code')]['imageFull']['content']|length>1 %}
        <a class="carousel-control-prev" href="#carouselFPCKitchen" role="button" data-slide="prev">
            <div class="d-flex">
                <svg width="40" height="40" class="m-auto"><use xlink:href="#back"/></svg>
                <span class="sr-only">Previous</span>
            </div>
        </a>
        <a class="carousel-control-next" href="#carouselFPCKitchen" role="button" data-slide="next">
            <div class="d-flex">
                <svg width="40" height="40" class="m-auto"><use xlink:href="#next"/></svg>
                <span class="sr-only">Next</span>
            </div>
        </a>
        {% endif %}
    </div>

    <div id="carouselFPCKitchen_mob" class="carousel slide d-lg-none" >
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img src="{% if categories[global.request.get('code')]['imageFull']['content'][0] is defined %}{{ categories[global.request.get('code')]['imageFull']['content'][0]|replace({' ':'%20'}) }}{% endif %}" class="img-fluid" />
            </div>
            <div class="carousel-item">
                <img src="{% if categories[global.request.get('code')]['imageFull']['content'][0] is defined %}{{ categories[global.request.get('code')]['imageFull']['content'][0]|replace({' ':'%20'}) }}{% endif %}" class="img-fluid" />
            </div>
            <div class="carousel-item">
                <img src="{% if categories[global.request.get('code')]['imageFull']['content'][0] is defined %}{{ categories[global.request.get('code')]['imageFull']['content'][0]|replace({' ':'%20'}) }}{% endif %}" class="img-fluid" />
            </div>
        </div>
        {% if categories[global.request.get('code')]['imageFull']['content']|length>1 %}
        <a class="carousel-control-prev" href="#carouselFPCKitchen_mob" role="button" data-slide="prev">
            <div class="d-flex">
                <svg width="40" height="40" class="m-auto"><use xlink:href="#back"/></svg>
                <span class="sr-only">Previous</span>
            </div>
        </a>
        <a class="carousel-control-next" href="#carouselFPCKitchen_mob" role="button" data-slide="next">
            <div class="d-flex">
                <svg width="40" height="40" class="m-auto"><use xlink:href="#next"/></svg>
                <span class="sr-only">Next</span>
            </div>
        </a>
        {% endif %}
    </div>

    <div class="container">
        <div class="col-12 col-lg-6 col-xl-5 bg-white p-4 pb-5 kitchen__bloc_title">
            <div class="row">
                <div class="col-12 col-sm-8 pt-4 pt-sm-0">
                    <h1 class="mb-0">{{ categories[global.request.get('code')]['label']['content'] }}</h1>
                    <p class="small">Fabrication Française - Garantie {{ categories[global.request.get('code')]['warantyDuration'] }}</p>
                </div>
                <div class="col-12 col-sm-4 pl-4">
                    <p class="small mb-0">à partir de</p>
                    <p class="kitchen__price">{{ categories[global.request.get('code')]['price'] |number_format(2, '.', ' ') }}€</p>
                </div>
                <div class="col-10 pl-0 offset-1">
                    <a href="#rdv-mag-cad" class="btn btn-primary col-12 h-45 rounded d-flex">
                        <div class="m-auto">
                            Prendre RDV
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

</div>

<div class="bg-light pt-5 pb-5">
    <div class="container pb-5">
        <div class="row pt-lg-5 pb-5">
            <div class="col-12 col-lg-6 col-xl-6 offset-xl-1">
                <p class="title_h1 text-uppercase">{{ categories[global.request.get('code')]['shortDesc']['content'] }}</p>
            </div>
            <div class="col-6 col-xl-4 m-0 p-0 d-none d-lg-flex">
                <div class="mt-auto ml-auto bg-white pt-3 px-3">
                    <p class="text-right">
                        <img src="https://res.cloudinary.com/dwkgy95ov/image/upload/v1518736707/picto_pefc.png" class="p-2 w-90" />
                        <img src="https://res.cloudinary.com/dwkgy95ov/image/upload/v1518736707/picto_made_in_france.png" class="p-2 w-90" />
                        <img src="https://res.cloudinary.com/dwkgy95ov/image/upload/v1518736707/picto_made_by_lapeyre.png" class="p-2 w-90" />
                    </p>
                </div>
            </div>
            <div class="col-12 col-xl-10 offset-xl-1 bg-white p-3 p-md-5">
                <p class="px-2 px-sm-4 my-0">{{ categories[global.request.get('code')]['longDesc']['content'] | raw }}</p>
                <p class="text-center mb-0 pt-3 d-lg-none">
                    <img src="https://res.cloudinary.com/dwkgy95ov/image/upload/v1518736707/picto_pefc.png" class="p-2 w-90" />
                    <img src="https://res.cloudinary.com/dwkgy95ov/image/upload/v1518736707/picto_made_in_france.png" class="p-2 w-90" />
                    <img src="https://res.cloudinary.com/dwkgy95ov/image/upload/v1518736707/picto_made_by_lapeyre.png" class="p-2 w-90" />
                </p>
            </div>
        </div>
        <div class="row overflow-hidden">
            <div class="col-6 col-md-4 offset-md-2 col-xl-3 offset-lg-0 d-flex d-flex d-lg-none d-xl-flex">
                <div class="kitchen__pictureDesc px-md-3 pt-5">
                    <img src="{{ categories[global.request.get('code')]['longDescriptionImg1'] }}" class="img-fluid"/>
                </div>
            </div>
            <div class="col-6 col-md-4 col-lg-4 col-xl-3 d-flex">
                <div class="kitchen__pictureDesc px-md-3 pt-5">
                    {% if categories[global.request.get('code')]['longDescriptionImg2'] != "" %}
                    <img src="{{ categories[global.request.get('code')]['longDescriptionImg2'] }}" class="img-fluid"/>
                    {% endif %}
                </div>
            </div>
            <div class="col-12 col-lg-8 col-xl-6 pt-5">
                <p class="title_h1 text-uppercase text-right">Les Plus</p>
                <div class="bg-white p-3 p-md-5">
                    <p class="px-2 px-sm-4 my-0">{{ categories[global.request.get('code')]['longDescription'] | raw }}</p>
                </div>
            </div>
            <div class="col-md-4 col-xl-3 offset-xl-1 pt-4 d-none d-md-block">
                {% if categories[global.request.get('code')]['longDescriptionImg3'] != "" %}
                <img src="{{ categories[global.request.get('code')]['longDescriptionImg3'] }}" class="img-fluid"/>
                {% endif %}
            </div>
            <div class="col-6 col-md-4 col-xl-3 pt-4">
                {% if categories[global.request.get('code')]['longDescriptionImg4'] != "" %}
                <img src="{{ categories[global.request.get('code')]['longDescriptionImg4'] }}" class="img-fluid" />
                {% endif %}
            </div>
            <div class="col-6 col-md-4 col-xl-3 pt-4">
                {% if categories[global.request.get('code')]['longDescriptionImg5'] != "" %}
                <img src="{{ categories[global.request.get('code')]['longDescriptionImg5'] }}" class="img-fluid" />
                {% endif %}
            </div>
        </div>

        <div class="row pt-5">
            <div class="col-12 col-sm-8 col-xl-6 pt-md-5 offset-xl-1 p-0">
                <p class="title_h1 text-uppercase col-12 col-sm-8 col-xl-8">S'adapte à vos envies</p>
                <div class="bg-white p-3 p-md-4">
                    <p class="px-2 px-sm-4 my-0">{{ categories[global.request.get('code')]['longDescription2'] | raw }}</p>
                </div>
                <div class="row mx-0 px-0">
                    <div class="p-3 bg-dark w-200 h-200 ml-auto">
                        <p class="text-uppercase kitchen__tiny_title pt-3">
                            Choisissez <span class="text-white d-block">vos finitions!</span>
                        </p>
                        <p class="text-white">
                            {#<a class="text-light" href="#"> #}&gt; Existe en 157 finitions{#</a>#}
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-sm-4 col-xl-3 pl-0 pt-5 d-none d-sm-block">
                <img src="https://res.cloudinary.com/dwkgy95ov/image/upload/v1519395733/nuancier4.jpg" class="img-fluid"/>
            </div>
        </div>

    </div>
    <div class="bg-white">
        <div class="container">
            <div class="row">
                <div class="col-12 col-lg-6 col-xl-5 offset-xl-1 p-lg-5 mb-5 pt-5 pt-lg-0">
                    <p class="title_h1 text-uppercase">
                        Ils ont adopté la {{ categories[global.request.get('code')]['label']['content'] }}
                    </p>
                    <blockquote class="blockquote position-relative kitchen__blockquote">
                        <p class="mb-0"><em class="small">{{ categories[global.request.get('code')]['testimonial'] }}</em></p>
                        <footer class="blockquote-footer text-dark pt-2">{{ categories[global.request.get('code')]['testimonialAuthor'] }}</footer>
                    </blockquote>
                </div>
                <div class="col-12 col-lg-6 col-xl-5 p-lg-5 pb-5">
                    <div class="col-12 my-4 px-0 bg-cover worktop__desc_image" style="background-image: url({{ categories[global.request.get('code')]['testimonialImg'] }})">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="bg-light">

        {% include 'storeWidgets/madeinfrance/madeinfrance.twig' %}

    </div>
    <div class="container">
        {% include 'storeWidgets/appointment/appointment.twig' %}
    </div>
    <div class="container">
        {% include 'storeWidgets/crosssellKitchen/crosssellKitchen.twig' %}
    </div>
    <div class="bg-white">
        <div class="container">
            {% include 'storeWidgets/crosssellCollection/crosssellCollection.twig' %}
        </div>
    </div>
    <div class="container">
        {% include 'storeWidgets/services/services.twig' %}
    </div>
    {% endblock %}
