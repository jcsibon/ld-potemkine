{% extends"layouts/default.html" %}
{% block content %}

<style>

    .kitchen__price {
        font-size: 40px; 
        font-family: 'DinCondensed', sans-serif; 
        line-height: 1em;
    }

    #carouselKitchen {
        max-width: 1980px;
    }

    .kitchen__title {
        color: #e5ded9;
        font-family: DinCondensed,sans-serif;
        line-height: 1em;
    }
    .kitchen__tiny-block img {
        height: 230px;
    }

    .kitchen__tiny_title {
        font-family: DinCondensed,sans-serif;
        color: #9e887a;
        line-height: 1.1em;
        font-size: 25px;
    }

    @media screen and (min-width: 992px) {
        .kitchen__pictos {
            position: absolute;
            top: -90px;
            right: 0;
        }
        .kitchen__pictureDesc {  
            position:absolute;
            bottom: 0;
        }
        .kitchen__bloc_title {
            position:absolute;
            bottom: 0;
            max-width: 660px;
            background: #ffffff; /* Old browsers */
            background: -moz-linear-gradient(top, #ffffff 40%, #ffffff 85%, #e5e5e5 100%); /* FF3.6-15 */
            background: -webkit-linear-gradient(top, #ffffff 40%,#ffffff 85%,#e5e5e5 100%); /* Chrome10-25,Safari5.1-6 */
            background: linear-gradient(to bottom, #ffffff 40%,#ffffff 85%,#e5e5e5 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
            filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#e5e5e5',GradientType=0 ); /* IE6-9 */
        }
    }
</style>


<div id="carouselKitchen" class="carousel slide m-auto overflow-hidden" data-ride="carousel" >
    <ol class="carousel-indicators d-lg-none">
        <li data-target="#carouselWorktop" data-slide-to="0" class="active"></li>
        <li data-target="#carouselWorktop" data-slide-to="1"></li>
        <li data-target="#carouselWorktop" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner overflow-visible" role="listbox">
        <div class="carousel-item active">
            <img class="d-block img-fluid" src="{% if categories[global.request.get('code')]['imageFull']['content'] is defined %}{{ categories[global.request.get('code')]['imageFull']['content'] }}{% endif %}" alt="">
        </div>
        <div class="carousel-item">
            <img class="d-block img-fluid" src="{% if categories[global.request.get('code')]['imageFull']['content'] is defined %}{{ categories[global.request.get('code')]['imageFull']['content'] }}{% endif %}" alt="">
        </div>
        <div class="carousel-item">
            <img class="d-block img-fluid" src="{% if categories[global.request.get('code')]['imageFull']['content'] is defined %}{{ categories[global.request.get('code')]['imageFull']['content'] }}{% endif %}" alt="">
        </div>
        <div class="col-12 col-lg-6 offset-lg-3 col-xl-5 offset-xl-5 bg-white p-4 pb-5 kitchen__bloc_title">
            <div class="row">
                <div class="col-8">
                    <h2 class="mb-0">Cuisine {{ categories[global.request.get('code')]['line'] }}</h2>
                    <p class="small">Fabrication Française - Garantie 10 ans</p>
                </div>
                <div class="col-4 pl-4">
                    <p class="small mb-0">à partir de</p>
                    <p class="kitchen__price">355,00€</p>
                </div>
                <div class="col-2">
                    <div class="bg-dark">
                        <a id="addToShoppingList_89106" href="#" onclick="wishList.goLogin('https://www.lapeyre.fr/amenagement-panama-decor-chene-blanchi-2490390','wishlist'); return false;" class="d-flex px-2 py-3" role="button">
                            <svg width="26" height="26" class="m-auto"><use xlink:href="#heart-o-white"/></svg>
                        </a>
                    </div>
                </div>
                <div class="col-9 col-xl-10 pl-0">
                    <div class="col s12 m12 l9 p-0">
                        <a href="#" class="btn btn-primary col-12 py-3">
                            <div id="productPageAdd2Cart" class="button_text">
                                Prendre RDV
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev text-dark d-none d-lg-block" href="#carouselKitchen" role="button" data-slide="prev">
        <svg width="80" height="80" class="m-auto"><use xlink:href="#arrow-point-to-left"/></svg>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next text-dark d-none d-lg-block" href="#carouselKitchen" role="button" data-slide="next">
        <svg width="80" height="80" class="m-auto"><use xlink:href="#arrow-point-to-right"/></svg>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="bg-light pt-5 pb-5">
